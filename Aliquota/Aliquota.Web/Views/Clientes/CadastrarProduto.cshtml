@model Aliquota.Domain.Entities.DTO.ProdutoDto

<h4>Cadastrar Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Proprietario" class="control-label"></label>
                <input type="hidden" asp-for="IdCliente" />
                <label>@ViewBag.Proprietario.NomeCliente</label>
            </div>
            <div class="form-group">
                <label asp-for="SituacaoAtual" class="control-label"></label>
                <input type="hidden" asp-for="IdSituacaoProduto" />
                <label>@ViewBag.SituacaoAtual.Situacao</label>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoProduto" class="control-label"></label>
                <select asp-for="IdTipoProduto" class="form-control" asp-items="@(SelectList)ViewBag.ListaTipoProduto"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorInvestido" class="control-label"></label>
                <input asp-for="ValorInvestido" type="number" min="0" max="10000" class="form-control" />
                <span asp-validation-for="ValorInvestido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInvestimento" class="control-label"></label>
                <input type="date" asp-for="DataInvestimento" class="form-control" />
                <span asp-validation-for="DataInvestimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-Id="@Model.IdCliente">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
